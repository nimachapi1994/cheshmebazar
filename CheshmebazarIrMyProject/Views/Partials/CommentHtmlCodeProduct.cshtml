        <label>3</label>

        <button class="btn btn-group-xs btn-danger" disabled>-</button>
        <label>2</label>
    </div>

        <br />
        <hr />

        <div class="cr" style="color:black;background-color:white">


            <p>
                @item.Txt
            </p>            <br />


        </div>
}






