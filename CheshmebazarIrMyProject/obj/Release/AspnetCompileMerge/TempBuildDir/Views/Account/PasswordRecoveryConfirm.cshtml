
@{
    ViewBag.Title = "PasswordRecoveryConfirm";
}

<div class="text-center" style="margin:auto;width:35%">
    <img src="~/Template/img/user.png" height="80" />
    <h4> لطفا رمز عبور جدید خود را وارد نمایید  </h4>
    <form action="/account/ResetPassword" method="post">
        <div class="form-group">
            <input class="form-control" dir="ltr"type="password" placeholder="Password" name="password"  />
  
            <br />
            <br />
            <button class="btn btn-primary"id="btnchangepass"> تغییر و ارسال رمز عبور جدید</button>
        </div>
    </form>
</div>
<script>
    btnchangepass.onclick = function () {
        this.textContent='لطفا چند لحظه صبر نمایید...'
    }
</script>

