<style>
    .img2 {
        width: 120px;
        height: 130px;
    }
</style>
<div id="sections">
    @foreach (var item in ViewBag.showproduct as IEnumerable<CheshmebazarIrMyProject.Models.Product>)
    {
        <section class="reverse no-padding">
            <div class="container">
                <div class="container-wrapper">
                    <div class="@*list-section*@ list-section2">

                        <div class="more-wrapper">
                            <div class="title">


                                <h1 class="a_title">

                                    <label style="color:#000000">@item.Name</label>


                                    @if (item.OfPrice != null)
                                    {
                                        <label style="color:#000000;font-size:x-small">  قیمت واقعی : @item.Price </label>
                                    }
                                    else
                                    {
                                        <label style="color:#000000;font-size:x-small">  قیمت  : @item.Price </label>

                                    }
                                    <nima style="color:orangered">/</nima>
                                    <embed x-ms-playtodisabled="true" />
                                    @if (item.OfPrice != null)
                                    {
                                        <label style="color:green;font-size:x-small">
                                            قیمت با تخفیف :
                                            @item.OfPrice
                                        </label>
                                    }

                                </h1>



                                <h1 class="a_title"></h1>

                                @if (item.OfPrice != null && item.ExpiredDateDiscount != null && item.StartDateDiscount != null)
                                {
                                    <div class="coupon">
                                        <a class="tearing countable" data-type="coupon" target="_blank" href="/store/GetDiscountForThisProduct" title="دریافت کوپن تخفیف">دریافت کوپن تخفیف</a>
                                        <div class="static">
                                            <div style="font-size:1.4em">@item.DiscountPesend٪</div>
                                            <div>تخفیف</div>
                                        </div>
                                    </div>
                                }
                                <a class="fav inactive" href="/Advertisement/Ads/ToggleFav/60655">

                                </a>
                            </div>


                            @if (item.SliderForProducts.Where(x => x.product_Id == item.Id) != null)
                            {
                                <div class="bbb slider" style="height:300%">
                                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

                                        <ol class="carousel-indicators">
                                            @{ string active = "active";}
                                            @for (int i = 0; i < item.SliderForProducts.Where(x => x.product_Id == item.Id).Count(); i++)
                                            {
                                                <li data-target="carousel-example-generic" data-slide-to="@i" class="@active"></li>
                                                active = "";
                                            }

                                        </ol>
                                        <div class="carousel-inner" role="listbox">
                                            @{
                                                active = "active";
                                            }
                                            @foreach (var item1 in item.SliderForProducts.Where(x => x.product_Id == item.Id).ToList())
                                            {
                                                <div class="item @active">
                                                    <img src="@($"data:image/jpeg;base64,{Convert.ToBase64String(item1.pic)}")" title="@item.Name">
                                                </div>
                                                active = "";
                                            }



                                        </div>
                                        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="next">

                                            <span aria-hidden="true"><img src="~/Icons/left-chevron.png" style="width:40px;height:20px" /></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">

                                            <span aria-hidden="true"><img src="~/Icons/right-chevron.png" style="width:40px;height:20px;padding-top:4%" class="text-center" /></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                </div>
                                                }




                        </div>
                    </div>
                </div>
            </div>

        </section>

        <section class="no-padding">
            <div class="container">
                <div class="container-wrapper">
                    <div class="description">
                        <div class="body bbb">
                            <p>@item.Txt</p>

                        </div>


                        <hr class="ad-hr">

                    </div>
                </div>
            </div>
        </section>


                                                }
























    <div class="container">

        <div class="row">

            <div class="col-sm-3"></div>

            <div class="col-sm-2">
                <a href="/store/storeview?id=@(ViewBag.id)" class="btn btn-lg  btn-primary">مشاهده اطلاعات فروشنده</a>
            </div>
            <div class="col-sm-2">


                <button class="btn btn-lg btn-primary" id="btnShowDivCutomerOpinions">نظرات مشتریان</button>
            </div>

            <div class="col-sm-2">


                <button class="btn btn-lg btn-primary" id="btnShowDivThisProviderProducts"> دیگر محصولات این فروشگاه</button>

            </div>
            <div class="col-sm-3"></div>
        </div>

        @*------------------------------------------------------------------------------------*@
        @*Show Up Row*@

        <div class="row">
            <div class="col-sm-0"></div>



            <div class="col-sm-10 pull-left">

                @*Opinions-----------------------------------*@
                <div id="divCustomerOpinions">



                    @Html.Partial("~/Views/partials/commenthtmlcodeproduct.cshtml")
                    <br />

                </div>
                @*Products-----------------------------------*@
                <div id="DivThisProviderProducts">



                    <section class="box-list">
                        <div class="container">
                            <div class="container-wrapper">
                                <div class="row row16px sw-wrapper">
                                    @foreach (var item in ViewBag.showOtheProducts as IEnumerable<CheshmebazarIrMyProject.Models.Product>)
                                    {
                                        <div class="col col-lg-2 col-md-3 col-sm-4 col-xs-6 sw-slide" style="height:100%">
                                            <div class="box">
                                                <a class="ad-box" title="@item.Name" href="/Store/Product?id=@(item.Id)" target="_blank">
                                                    <h4 class="title">@item.Name</h4>

                                                    @if (item.Logo != null)
                                                    {

                                                        <img src="@($"data:image/jpeg;base64,{Convert.ToBase64String(item.Logo)}")" alt="@item.Name" class="img img-responsive img-rounded img-thumbnail img2">
                                                    }
                                                    @if (item.DiscountPesend != null && item.ExpiredDateDiscount != null && item.StartDateDiscount != null)
                                                    {
                                                        <div class="success" title="@item.DiscountPesend % تخفیف "><img src="~/Icons/discount.png" style="width:20px;height:20px" /> <i>@item.DiscountPesend %</i> </div>
                                                    }
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </section>

                </div>
            </div>

            <div class="col-sm-1">




            </div>
        </div>

    </div>
</div>
<body id="bd">
</body>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
        $(function () {
            $(carousel-example-generic).carousel({ interval: 1000 })
        })
</script>
<script>
    btnShowDivCutomerOpinions.onclick = function () {
        $(divCustomerOpinions).show()
        $(DivThisProviderProducts).hide()
    }
    btnShowDivThisProviderProducts.onclick = function () {
        $(divCustomerOpinions).hide()
        $(DivThisProviderProducts).show()
    }
</script>
<script>

    $(bd).html(function () {


        $(divCustomerOpinions).hide();
        $(DivThisProviderProducts).hide()
    })

</script>
@foreach (var item in ViewBag.showproduct as IEnumerable<CheshmebazarIrMyProject.Models.Product>)
{
    if (item.KeyWords != null)
    {
        var d = item.KeyWords.Split(',');
        <div hidden="hidden">
            @foreach (var item1 in d.ToList())
            {
                <p hidden="hidden">
                    <i hidden="hidden" class="glyphicon glyphicon-tag iiii"></i>
                    <a href="/store/product?id=@(item.Id)" hidden="hidden" class="ad-tag" target="_blank"><h2>@item1</h2></a>


                </p>


            }
        </div>
    }
}



